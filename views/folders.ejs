<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Sharing App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black/80 text-white">
  <main class="mx-auto w-full lg:w-3/4 p-4">
    <%- include('./partials/navbar.ejs') %>
    <div class="my-5 flex justify-between items-center">
      <h3 class="text-xl">Your Folders</h3>
      <a href="/folders/create" class="px-10 py-2 bg-blue-600 rounded-md" type="submit">Create Folder</a>
    </div>
    <div>
      <% if (locals.folders && locals.folders.length > 0) {%>
        <div class="my-3 text-lg">
          <% locals.folders.forEach(folder => { %>
            <p>
              ğŸ“ <a href="/folders/<%=folder.id %>" class="capitalize text-blue-400 hover:underline"><%= folder.name %></a>
            </p>
          <% }) %>
        </div>
      <% } else { %>
        <div class="space-y-2">
          <p>You don't have any folders right now</p>
          <p><a href="/folders/create" class="text-blue-400 hover:underline">Click here</a> to create a folder</p>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>